<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/notifications/delete" method="POST">
        <service class="Digibart\Notifications\Api\NotificationsManagerInterface" method="delete"/>
        <resources>
            <resource ref="self"/>
        </resources>
    </route>
    <route url="/V1/notifications/update" method="POST">
        <service class="Digibart\Notifications\Api\NotificationsManagerInterface" method="update"/>
        <resources>
            <resource ref="self"/>
        </resources>
    </route>
</routes>
